<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.profesoresi.appintentresultados.Main2Activity">

    <EditText
        android:id="@+id/etxDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Introducir dato"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etxDato"
        android:layout_alignStart="@+id/etxDato"
        android:layout_below="@+id/etxDato"
        android:layout_marginTop="41dp"
        android:onClick="enviarDato"
        android:text="OK" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etxDato"
        android:layout_alignRight="@+id/etxDato"
        android:layout_alignTop="@+id/btnOk"
        android:onClick="cancelar"
        android:text="Cancel" />
</RelativeLayout>
